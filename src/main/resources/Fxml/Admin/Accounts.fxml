<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>

<AnchorPane prefHeight="750.0" prefWidth="900.0" stylesheets="@../../Styles/Accounts.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.coursemanagement.Controllers.Admin.AccountsController">
   <children>
      <VBox layoutX="8.0" prefHeight="740.0" prefWidth="884.0">
         <children>
            <!-- Thanh công cụ -->
            <AnchorPane prefHeight="130.0" prefWidth="900.0" styleClass="white-bg" stylesheets="@../../Styles/admin_dashboard.css">
               <children>
                  <Button fx:id="editButton" layoutX="685.0" layoutY="116.0" text="Edit" textFill="WHITE" onAction="#onEditClicked" prefHeight="31.0" prefWidth="66.0" style="-fx-background-color: #007bff;" styleClass="shadow">
                     <font><Font name="System Bold" size="13.0" /></font>
                     <graphic>
                        <ImageView fitHeight="23.0" fitWidth="29.0" preserveRatio="true">
                           <image><Image url="@../../Images/pencil.png" /></image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="filterButton" layoutX="230.0" layoutY="116.0" text="Filter ▼" textFill="WHITE" onAction="#onFilterClicked" prefHeight="31.0" prefWidth="86.0" style="-fx-background-color: #007bff;" styleClass="shadow">
                     <font><Font name="System Bold" size="12.0" /></font>
                     <graphic>
                        <ImageView fitHeight="23.0" fitWidth="27.0" preserveRatio="true">
                           <image><Image url="@../../Images/filter.png" /></image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <TextField fx:id="searchField" layoutY="116.0" prefHeight="32.0" prefWidth="222.0" promptText="Search by name">
                     <styleClass>
                        <String fx:value="shadow" />
                        <String fx:value="search" />
                        <String fx:value="search-focused" />
                     </styleClass>
                  </TextField>
                  <ImageView fx:id="exportImageView" layoutX="848.0" layoutY="113.0" fitHeight="38.0" fitWidth="41.0" onMouseClicked="#onExportExcelClicked" preserveRatio="true" style="-fx-cursor: hand;">
                     <image><Image url="@../../Images/upload.png" /></image>
                  </ImageView>
                  <Button layoutX="761.0" layoutY="116.0" text="Delete" textFill="WHITE" prefHeight="30.0" prefWidth="79.0" style="-fx-background-color: #007bff;" styleClass="shadow">
                     <font><Font name="System Bold" size="12.0" /></font>
                     <graphic>
                        <ImageView fitHeight="23.0" fitWidth="29.0" preserveRatio="true">
                           <image><Image url="@../../Images/delete.png" /></image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <ImageView fx:id="searchImageView" layoutX="195.0" layoutY="120.0" fitHeight="24.0" fitWidth="25.0" onMouseClicked="#onSearchClicked" preserveRatio="true">
                     <image><Image url="@../../Images/search.png" /></image>
                  </ImageView>
               </children>
            </AnchorPane>

            <HBox spacing="30.0" alignment="CENTER" style="-fx-padding: 10 0 10 0;">
               <Button fx:id="studentRoleBtn" onAction="#handleStudentTab"
                       prefHeight="38.0" prefWidth="106.0"
                       styleClass="action-button" text="Học sinh" textFill="WHITE">
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font>
               </Button>
               <Button fx:id="instructorRoleBtn" onAction="#handleInstructorTab"
                       prefHeight="38.0" prefWidth="106.0"
                       styleClass="action-button" text="Giáo viên" textFill="WHITE">
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font>
               </Button>
            </HBox>

            <!-- Bảng dữ liệu -->
            <TableView fx:id="studentTable" prefHeight="596.0" prefWidth="884.0">
               <columns>
                  <TableColumn fx:id="colSelect" prefWidth="50.0" />
                  <TableColumn fx:id="colId" prefWidth="58.0" text="ID" />
                  <TableColumn fx:id="colName" prefWidth="190.0" text="Name" />
                  <TableColumn fx:id="colEmail" prefWidth="200.0" text="Email" />
                  <TableColumn fx:id="colPhone" prefWidth="150.0" text="Phone" />
                  <TableColumn fx:id="colCourses" prefWidth="229.0" text="Courses" />
               </columns>
            </TableView>
         </children>
      </VBox>
   </children>
   <styleClass>
      <String fx:value="white-bg" />
      <String fx:value="shadow" />
   </styleClass>
</AnchorPane>
