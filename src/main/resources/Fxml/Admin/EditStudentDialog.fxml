<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.coursemanagement.Controllers.Admin.EditStudentController" prefWidth="500" prefHeight="450">
    <VBox spacing="10" style="-fx-padding: 15;">
        <!-- Tiêu đề -->
        <Label text="Chỉnh sửa khóa học của sinh viên" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <!-- Thông tin sinh viên (readonly) -->
        <GridPane hgap="10" vgap="10">
            <Label text="Mã sinh viên:" />
            <TextField fx:id="idField" editable="false" />

            <Label text="Tên:" GridPane.rowIndex="1" />
            <TextField fx:id="nameField" editable="false" GridPane.rowIndex="1" />

            <Label text="Email:" GridPane.rowIndex="2" />
            <TextField fx:id="emailField" editable="false" GridPane.rowIndex="2" />

            <Label text="SĐT:" GridPane.rowIndex="3" />
            <TextField fx:id="phoneField" editable="false" GridPane.rowIndex="3" />
        </GridPane>

        <!-- Danh sách khóa học -->
        <Label text="Chọn khóa học:" style="-fx-font-weight: bold;" />
        <ScrollPane fitToWidth="true" prefHeight="200">
            <VBox fx:id="coursesContainer" spacing="5" style="-fx-padding: 5;" />
        </ScrollPane>

        <!-- Nút thao tác -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Hủy" onAction="#onCancelClicked" />
            <Button text="Cập nhật" onAction="#onUpdateClicked" style="-fx-background-color: #007bff; -fx-text-fill: white;" />
        </HBox>
    </VBox>
</AnchorPane>
