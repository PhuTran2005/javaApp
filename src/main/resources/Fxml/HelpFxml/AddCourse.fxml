<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" styleClass="add_course-container"
            stylesheets="@../../Styles/Profile.css" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.coursemanagement.Controllers.Admin.CourseController.AddCourseController">

    <!-- Bố cục tổng thể -->
    <VBox layoutX="60.0" layoutY="60.0" prefHeight="400.0" prefWidth="500.0" spacing="15" styleClass="profile-container"
          stylesheets="@../../Styles/Profile.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="30.0"
          AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="0.0">

        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-alignment: center;" styleClass="title-label"
               text="Thêm khóa học "/>

        <HBox spacing="10" styleClass="input-group">
            <Label styleClass="input-label" text="Tên khóa học"/>
            <TextField fx:id="courseNameField" prefHeight="29.0" prefWidth="280.0" promptText="Nhập tên của khóa học"
                       styleClass="input-field"/>
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </HBox>

        <HBox prefHeight="9.0" prefWidth="499.0" spacing="10" styleClass="input-group">
            <Label styleClass="input-label" text="Chọn giảng viên:"/>
            <ChoiceBox fx:id="instructorField" prefHeight="31.0" prefWidth="170.0" styleClass="selected-field"/>
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </HBox>
        <HBox prefHeight="9.0" prefWidth="499.0" spacing="10" styleClass="input-group">
            <Label styleClass="input-label" text="Chọn chủ đề:"/>
            <ChoiceBox fx:id="categoryField" prefHeight="31.0" prefWidth="170.0" styleClass="selected-field"/>
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </HBox>
        <HBox spacing="10" styleClass="input-group">
            <Label styleClass="input-label" text="Giá:"/>
            <TextField fx:id="priceField" prefWidth="250.0" promptText="Nhập giá của khóa học"
                       styleClass="input-field"/>
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </HBox>
        <HBox prefHeight="9.0" prefWidth="499.0" spacing="10" styleClass="input-group">
            <children>
                <Label styleClass="input-label" text="Ngày bắt đầu:"/>
                <DatePicker fx:id="startDatePicker" prefHeight="50.0" prefWidth="170.0"/>
            </children>
        </HBox>
        <HBox prefHeight="9.0" prefWidth="499.0" spacing="10" styleClass="input-group">
            <children>
                <Label styleClass="input-label" text="Ngày kết thúc:"/>
                <DatePicker fx:id="endDatePicker" prefWidth="170.0"/>
            </children>
        </HBox>

        <HBox spacing="10" styleClass="input-group">
            <Label styleClass="input-label" text="Ảnh mô tả:"/>
            <ImageView fx:id="thumbnailImageView" fitHeight="91.0" fitWidth="177.0" preserveRatio="true" smooth="true"
                       styleClass="course-thumbnail-img">
            </ImageView>
            <Button mnemonicParsing="false" onAction="#handleChooseThumbnail" prefHeight="24.0" prefWidth="86.0"
                    styleClass="action-button" text="upload file"/>
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </HBox>
        <HBox prefHeight="102.0" prefWidth="499.0" spacing="10" styleClass="input-group">
            <Label styleClass="input-label" text="Mô tả:"/>
            <TextArea fx:id="descriptionField" prefHeight="38.0" prefWidth="339.0" promptText="Nhập mô tả"
                      style="-fx-background-color: white;" styleClass="textarea-field" wrapText="true"/>
        </HBox>
        <HBox prefHeight="80.0" prefWidth="460.0" styleClass="btn-box">
            <children>
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" prefHeight="16.0"
                        prefWidth="76.0" styleClass="action-button" text="Hủy"/>

                <!-- Nút Lưu -->
                <Button fx:id="saveButton" onAction="#handleSave" prefHeight="27.0" prefWidth="72.0"
                        styleClass="action-button" text="Thêm"/>
            </children>
        </HBox>

    </VBox>

</AnchorPane>
