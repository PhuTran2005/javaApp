<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<AnchorPane fx:id="forgetPasswordForm" prefHeight="500.0" prefWidth="700.0"
            styleClass="login_container" stylesheets="@../Styles/Login.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.coursemanagement.Controllers.ForgetPasswordController">

    <children>
        <!-- Logo bên trái -->
        <VBox prefHeight="400.0" prefWidth="300.0" styleClass="login_logo_container"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <ImageView fitHeight="250.0" fitWidth="250.0">
                    <Image url="@../Images/logoNhom.png" />
                </ImageView>
                <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-alignment: center;"
                       styleClass="logo-subtitle" text="Khôi phục mật khẩu" />
            </children>
        </VBox>

        <!-- Form chính bên phải -->
        <VBox layoutX="386.0" layoutY="28.0" prefHeight="383.0" prefWidth="306.0" spacing="20"
              styleClass="flex-center"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="300.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <!-- Progress -->
            <HBox alignment="CENTER" prefWidth="350.0" spacing="20" styleClass="progress-container">
                <children>
                    <VBox alignment="CENTER" spacing="5" styleClass="step-indicator">
                        <Circle fx:id="step1Circle" radius="15" styleClass="step-circle active" />
                        <Label styleClass="step-label" text="Email" />
                    </VBox>
                    <Line endX="50" startX="0" styleClass="step-line" />
                    <VBox alignment="CENTER" spacing="5" styleClass="step-indicator">
                        <Circle fx:id="step2Circle" radius="15" styleClass="step-circle" />
                        <Label styleClass="step-label" text="Xác thực" />
                    </VBox>
                    <Line endX="50" startX="0" styleClass="step-line" />
                    <VBox alignment="CENTER" spacing="5" styleClass="step-indicator">
                        <Circle fx:id="step3Circle" radius="15" styleClass="step-circle" />
                        <Label styleClass="step-label" text="Mật khẩu" />
                    </VBox>
                </children>
            </HBox>

            <!-- Step 1 -->
            <VBox fx:id="step1Container" spacing="15" prefWidth="300.0" styleClass="step-container">
                <children>
                    <Label text="Nhập địa chỉ email để khôi phục" style="-fx-font-size: 16px;" />
                    <TextField fx:id="emailField" promptText="example@email.com"
                               prefHeight="40.0" prefWidth="280.0"
                               styleClass="modern-textfield" />
                    <Button fx:id="btnSendCode" onAction="#handleSendCode"
                            prefHeight="40.0" prefWidth="280.0"
                            styleClass="primary-button" text="Gửi mã xác thực" />
                    <Button fx:id="btnBackToLogin" onAction="#switchToLogin"
                            prefHeight="40.0" prefWidth="280.0"
                            styleClass="secondary-button" text="Quay lại đăng nhập" />
                </children>
            </VBox>

            <!-- Step 2 -->
            <VBox fx:id="step2Container" spacing="15" visible="false"
                  prefWidth="300.0" styleClass="step-container">
                <children>
                    <Label text="Nhập mã xác thực đã gửi" style="-fx-font-size: 16px;" />
                    <TextField fx:id="codeField" promptText="6-digit code"
                               prefHeight="40.0" prefWidth="280.0"
                               styleClass="modern-textfield" />
                    <Button fx:id="btnVerifyCode" onAction="#handleVerifyCode"
                            prefHeight="40.0" prefWidth="280.0"
                            styleClass="primary-button" text="Xác thực" />
                    <Button fx:id="btnBackToEmail" onAction="#backToStep1"
                            prefHeight="40.0" prefWidth="280.0"
                            styleClass="secondary-button" text="Thay đổi email" />
                </children>
            </VBox>

            <!-- Step 3 -->
            <VBox fx:id="step3Container" spacing="15" visible="false"
                  prefWidth="300.0" styleClass="step-container">
                <children>
                    <PasswordField fx:id="newPasswordField" promptText="Mật khẩu mới"
                                   prefHeight="40.0" prefWidth="280.0"
                                   styleClass="modern-textfield" />
                    <PasswordField fx:id="confirmPasswordField" promptText="Xác nhận mật khẩu"
                                   prefHeight="40.0" prefWidth="280.0"
                                   styleClass="modern-textfield" />
                    <Button fx:id="btnResetPassword" onAction="#handleResetPassword"
                            prefHeight="40.0" prefWidth="280.0"
                            styleClass="primary-button" text="Cập nhật mật khẩu" />
                    <Button fx:id="btnBackToVerify" onAction="#backToStep2"
                            prefHeight="40.0" prefWidth="280.0"
                            styleClass="secondary-button" text="Quay lại xác thực" />
                </children>
            </VBox>

            <!-- Message -->
            <Label fx:id="messageLabel" style="-fx-text-fill: red; -fx-font-size: 14px;"
                   visible="false" wrapText="true" />
        </VBox>
    </children>
</AnchorPane>
